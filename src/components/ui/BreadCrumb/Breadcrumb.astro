---
import HomeIcon from "@icons/HomeIcon.astro";
import CrumbRoute from "./CrumbRoute.astro";

const paths = Astro.url.pathname.split("/").filter((crumb: any) => crumb);
---

<div class="flex items-center py-4 overflow-x-auto whitespace-nowrap">
  <a href="/" class="text-black dark:text-gray-200">
    <HomeIcon />
  </a>

  {
    paths.map((path, index) => (
      <span>
        <span class="mx-3 text-gray-500 dark:text-gray-400">/</span>
        <CrumbRoute paths={paths} index={index} />
      </span>
    ))
  }
</div>

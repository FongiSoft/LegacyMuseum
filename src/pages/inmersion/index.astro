---
import Layout from "../../layouts/Layout.astro";
import TrashIcon from "../../components/ui/icons/TrashIcon.astro";
import EditIcon from "../../components/ui/icons/EditIcon.astro";
import EditRecord from "../../components/ui/Tables/EditRecord.astro";
import AddRegisterBtn from "../../components/ui/Buttons/AddRegisterBtn.astro";
import convertImmersionDataToJSON from "@functions/ConvertDataToJSON";  // Función para convertir los datos de inmersión
import { turso } from "src/turso";
import BackBtn from "@components/ui/Buttons/BackBtn.astro";

// Realiza la consulta a la tabla Immersions
const rows = await turso.execute('SELECT * FROM Immersions');

// Convierte las filas a formato JSON
const data = rows.toJSON();
// Convierte a formato JSON deseado
const result = convertImmersionDataToJSON(data);

interface ImmersionRecord {
  immersionID: number;
  immersionTypeID: number;
  immersionDate: Date;
  immersionStatusID: number;
  immersionTime: number;
}
---

<Layout title="Inmersiones">
  <div class="max-w-screen-xl mx-auto px-4 md:px-8">
    <div class="items-start justify-between md:flex">
      <div class="max-w-lg">
        <h3 class="text-gray-800 text-xl font-bold sm:text-2xl dark:text-gray-300">
          Registros de Inmersiones
        </h3>
      </div>
      <div class="mt-3 md:mt-0">
        <AddRegisterBtn />
      </div>
    </div>
    <div class="mt-6 shadow-sm border rounded-lg overflow-x-auto">
      <table class="w-full table-auto text-sm text-left">
        <thead class="dark:bg-gray-400/20 dark:text-white bg-gray-50 text-gray-600 font-medium border-b">
          <tr>
            <th class="py-3 px-6">ID Inmersión</th>
            <th class="py-3 px-6">Fecha de Inmersión</th>
            <th class="py-3 px-6">Tiempo de Inmersión (min)</th>
            <th class="py-3 px-6">Estado</th>
            <th class="py-3 px-6"></th>
          </tr>
        </thead>
        <tbody class="text-gray-600 divide-y">
          {
            result.map((item: ImmersionRecord) => (
              <tr>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.immersionID}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.immersionDate.toLocaleDateString()}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.immersionTime}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white capitalize">
                  <span class={`px-2 py-1 rounded-full text-sm ${
                    item.immersionStatusID === 1 ? 'bg-green-100 text-green-800' :
                    item.immersionStatusID === 2 ? 'bg-yellow-100 text-yellow-800' :
                    'bg-red-100 text-red-800'
                  }`}>
                    {item.immersionStatusID === 1 ? 'Activa' : item.immersionStatusID === 2 ? 'Completada' : 'Otro'}
                  </span>
                </td>
                <td class="flex items-center justify-center gap-4 m-2 text-right px-6 whitespace-nowrap">
                  <EditRecord href={`/immersions/${item.immersionID}`}>
                    <EditIcon />
                  </EditRecord>
                  <a
                    href={`/immersions/delete?immersionID=${item.immersionID}`}
                    class="py-2 px-3 inline-block text-white duration-150 font-medium bg-red-600 rounded-lg hover:bg-red-500 active:bg-red-700 md:text-sm"
                  >
                    <TrashIcon />
                  </a>
                </td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </div>
  </div>
</Layout>
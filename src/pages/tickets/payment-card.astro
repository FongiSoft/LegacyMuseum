---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Card Payment">
  <div class="max-w-6xl mx-auto mt-12 p-8 bg-gray-800 rounded-lg shadow-md">
    <h1 class="text-3xl font-semibold text-white mb-6">Payment with Card</h1>

    <form class="grid grid-cols-2 gap-6">
      <!-- Tipo de tarjeta -->
      <div>
        <label class="block text-sm font-medium text-white">Card Type</label>
        <select class="mt-1 block w-full px-3 py-2 bg-gray-700 text-white rounded-md focus:ring focus:ring-blue-500">
          <option>Credit</option>
          <option>Debit</option>
        </select>
      </div>

      <!-- Fecha de expiración y CVV -->
      <div>
        <label class="block text-sm font-medium text-white">Expiration Date & CVV</label>
        <div class="flex gap-2">
          <input type="text" class="w-1/2 px-3 py-2 bg-gray-700 text-white rounded-md focus:ring focus:ring-blue-500" placeholder="MM/YY" />
          <input type="text" class="w-1/2 px-3 py-2 bg-gray-700 text-white rounded-md focus:ring focus:ring-blue-500" placeholder="CVV" />
        </div>
      </div>

      <!-- Código postal -->
      <div>
        <label class="block text-sm font-medium text-white">Postal Code</label>
        <input type="text" class="mt-1 block w-full px-3 py-2 bg-gray-700 text-white rounded-md focus:ring focus:ring-blue-500" placeholder="Postal Code" />
      </div>

      <!-- Nombre del titular de la tarjeta -->
      <div>
        <label class="block text-sm font-medium text-white">First Name</label>
        <input type="text" class="mt-1 block w-full px-3 py-2 bg-gray-700 text-white rounded-md focus:ring focus:ring-blue-500" placeholder="First Name" />
      </div>

      <!-- Apellido del titular de la tarjeta -->
      <div>
        <label class="block text-sm font-medium text-white">Last Name</label>
        <input type="text" class="mt-1 block w-full px-3 py-2 bg-gray-700 text-white rounded-md focus:ring focus:ring-blue-500" placeholder="Last Name" />
      </div>

      <!-- Número de tarjeta -->
      <div>
        <label class="block text-sm font-medium text-white">Card Number</label>
        <input type="text" class="mt-1 block w-full px-3 py-2 bg-gray-700 text-white rounded-md focus:ring focus:ring-blue-500" placeholder="Card Number" />
      </div>

      <!-- Botón de Confirmar Transacción -->
      <div class="col-span-2 flex justify-end">
        <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded hover:bg-blue-700 focus:ring focus:ring-blue-500">
          Confirm Transaction
        </button>
      </div>
    </form>
  </div>
</Layout>

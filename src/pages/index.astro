---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pantalla Inicial de Mantenimiento Correctivo/Preventivo">
  <main class="content">
    <!-- Título grande centrado -->
    <h1 class="title">Bienvenido</h1>

    <!-- Imágenes de Accesorio Realidad Virtual y Sala de Realidad Virtual -->
    <div class="icons">
      <div class="icon">
        <img src="/Images/Accesorio Realidad Virtual.png" alt="Accesorio Realidad Virtual" />
        <p>Accesorio Realidad Virtual</p>
      </div>
      <div class="icon">
        <img src="/Images/Sala Realidad Virtual.png" alt="Sala de Realidad Virtual" />
        <p>Sala de Realidad Virtual</p>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Título centrado sin tanto espacio superior */
  .title {
    font-size: 2.5rem;
    text-align: center;
    margin: 0;
    padding: 0;
    color: #333;
  }

  /* Contenedor para las imágenes y sus descripciones */
  .icons {
    display: flex;
    justify-content: space-around;
    margin-top: 1rem;
  }

  .icon img {
    width: 300px;
    height: auto;
  }

  .icon p {
    margin-top: 5px;
    font-size: 1.2rem;
    color: #333;
    text-align: center;
  }
</style>

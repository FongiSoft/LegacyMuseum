---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Legacy Museum</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <div class="container">
      <!-- Menú lateral -->
      <aside>
        <nav>
          <ul>
            <li class="active">
              <a href="/">
                <i class="fas fa-home"></i> Central
                <span class="menu-arrow">&gt;</span>
              </a>
            </li>
            <li>
              <a href="/events">
                <i class="fas fa-calendar-alt"></i> Eventos
                <span class="menu-arrow">&gt;</span>
              </a>
            </li>
            <li>
              <a href="/users">
                <i class="fas fa-users"></i> Usuarios
                <span class="menu-arrow">&gt;</span>
              </a>
            </li>
            <li>
              <a href="/stats">
                <i class="fas fa-chart-bar"></i> Estadísticas
                <span class="menu-arrow">&gt;</span>
              </a>
            </li>
          </ul>
        </nav>

        <!-- Botones Configuración y Cerrar Sesión al final del menú -->
        <div class="menu-footer">
          <ul>
            <li><a href="/config"><i class="fas fa-cog"></i> Configuración</a></li>
            <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a></li>
          </ul>
        </div>
      </aside>

      <!-- Contenido principal -->
      <main class="main-content">
        <!-- Encabezado alineado a la izquierda -->
        <header class="main-header">
          <h1>The Legacy Museum</h1>
          <h2>{title}</h2>
        </header>

        <!-- Contenido dinámico -->
        <div class="content">
          <slot />
        </div>

        <!-- Botones más grandes y alineados a la izquierda -->
        <div class="buttons-footer">
          <div class="buttons">
            <button class="btn-secondary">Inicio</button>
            <button class="btn-secondary">Regresar</button>
          </div>

          <!-- Copyright alineado a la izquierda -->
          <div class="copyright">
            <p>&copy; 2023 Zetabyte Solutions</p>
            <p>Este registro modificará la base de datos</p>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>

<style>
  /* Contenedor principal con flexbox */
  .container {
    display: flex;
    min-height: 100vh;
    font-family: 'Arial', sans-serif;
    background-color: #f8f9fa;
  }

  /* Menú lateral */
  aside {
    width: 250px;
    background-color: #f4f6f9;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  aside nav ul {
    list-style: none;
    padding: 0;
  }

  aside nav ul li {
    margin-bottom: 20px;
    position: relative;
  }

  aside nav ul li a {
    text-decoration: none;
    color: #333;
    font-size: 18px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    border-radius: 8px;
  }

  aside nav ul li a i {
    margin-right: 10px;
  }

  /* Color de la sección activa */
  aside nav ul li.active a {
    color: #007bff;
    background-color: #e9f5ff;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
  }

  aside nav ul li a:hover {
    color: #007bff;
  }

  /* Flecha del menú */
  .menu-arrow {
    color: #999;
    font-size: 16px;
  }

  /* Botones Configuración y Cerrar Sesión */
  .menu-footer {
    margin-top: auto;
  }

  .menu-footer ul {
    list-style: none;
    padding: 0;
  }

  .menu-footer ul li {
    margin-bottom: 10px;
  }

  .menu-footer ul li a {
    text-decoration: none;
    color: #333;
    font-size: 18px;
  }

  .menu-footer ul li a i {
    margin-right: 10px;
  }

  /* Contenido principal */
  .main-content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  /* Encabezado alineado a la izquierda */
  .main-header {
    text-align: left;
    margin-bottom: 20px;
    padding: 0 40px;
  }

  .main-header h1 {
    font-size: 24px;
    color: #007bff;
  }

  .main-header h2 {
    font-size: 20px;
    color: #333;
  }

  /* Botones y copyright dentro del footer */
  .buttons-footer {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 0 40px 20px;
    gap: 10px; /* Ajuste de espacio entre botones y copyright */
  }

  .buttons {
    display: flex;
    gap: 20px;
  }

  .btn-secondary {
    background-color: #6c757d;
    border: none;
    color: white;
    padding: 15px 50px;
    font-size: 18px;
    border-radius: 5px;
    cursor: pointer;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  /* Copyright alineado a la izquierda */
  .copyright {
    text-align: left;
    font-size: 12px;
    color: #999;
  }

  .copyright p {
    margin: 5px 0;
  }
</style>

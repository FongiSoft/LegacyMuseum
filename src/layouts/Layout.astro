---
import Breadcrumb from "@components/ui/BreadCrumb/Breadcrumb.astro";
import SideBar from "@components/ui/sidebar/SideBar.astro";
import Copyright from "@components/Copyright.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;

const session = Astro.cookies.get("userSes");

if (!session) {
  return Astro.redirect("/404");
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Legacy Museum Landing Page" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ViewTransitions/>
    <meta name="generator" content={Astro.generator} />
    <title>{title} || Legacy Museum</title>
  </head>
  <body class="flex bg-gray-100 dark:bg-gray-900 min-h-screen bg-[url('https://flowbite.s3.amazonaws.com/docs/jumbotron/hero-pattern.svg')] dark:bg-[url('https://flowbite.s3.amazonaws.com/docs/jumbotron/hero-pattern-dark.svg')]">
    <SideBar/>
    <main class="flex-1 p-6 flex flex-col justify-between">
      <div class="z-10 relative">
        <h1
          class="text-LegacyBlue-600 font-bold text-[26px] leading-[38px] dark:text-white"
        >
          The Legacy Museum
        </h1>
        <Breadcrumb />
        <slot/>
      </div>
      <Copyright />
    </main>
  </body>
  <div class="bg-gradient-to-b from-LegacyBlue-600 opacity-10 w-full h-full absolute top-0 left-0 z-0"></div>
</html>
<style is:global>
  :root {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>